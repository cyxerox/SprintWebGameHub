{% extends '@projectGameHub/Layout_front.html.twig' %}

{% block content %}
    <div class="wrapper">
        <div class="header-breadcrumbs">
            <h2 class="right">Create reclamation</h2>
            <ul>
                <li><a href="index.html">Homepage</a></li>
                <li>Create reclamation</li>
            </ul>
        </div>
    </div>

    </header>
    <div id="main-box" class="full-width">

        <div id="main">
            <div class="forum-block">

                <h2><span>Create reclamation"</span></h2>



                <div class="content-padding full-reply">
                    <div class="reply-box">
                        <div class="reply-textarea">
                                {{ form_start(form, {'method': 'post', 'action': path('project_game_hub_reclamation_ajout')}) }}

                                <div class="respond-input">
                                    <label for="inputEmail3"  > <h4 class="modal-title" id="myModalLabel">description :</h4> </label><br>
                                    {{form_widget(form.description, { 'attr': {'class': 'form-control'} }) }} {{form_errors(form.description)}}


                                </div>
                                <div class="respond-input">
                                    <label for="inputPassword3"  ><h4 class="modal-title" id="myModalLabel">pseudo :</h4></label><br>

                                    <select  id="pseudo" name="pseudoajout" class="form-control">
                                        {% for m in membre %}
                                            {% if m.roles[0]=="ROLE_USER" %}
                                                <option  value="{{ m.username }}">{{ m.username }}</option>
                                            {% endif %}
                                        {% endfor %}

                                    </select>

                                </div>
                                <div class="respond-input">
                                    <label for="inputPassword3" ><h4 class="modal-title" id="myModalLabel"> url :</h4></label><br>
                                    {{form_widget(form.url, { 'attr': {'class': 'form-control categorie'} }) }} {{form_errors(form.url)}}

                                </div>

                                <input type="submit" name="send" value="Add reclamation">

                                {{form_end(form)}}
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div class="clear-float"></div>

    </div>
    </div>
    </div>

    <div class="clear-float"></div>


{% endblock %}