
{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrap-content container" id="container">
        <!-- start: DASHBOARD TITLE -->
        <section id="page-title"  >
            <div class="row">
                <div class="col-sm-7">
                    <h1 class="mainTitle">Liste des reclamtions</h1>
                </div>
                <ol class="breadcrumb">
                    <li>
                        <span>Reclamtions</span>
                    </li>
                    <li class="active">
                        <span>Liste des reclamtions</span>
                    </li>
                </ol>
            </div>
        </section>
        <!-- end: DASHBOARD TITLE -->
        <!-- start: UI BOOTSTRAP MODALS -->
        <div class="container-fluid container-fullw">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12 space20">

                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="sample_2">
                            <thead>
                            <tr>
                                <th>pseudo</th>
                                <th>nombre de reclamation</th>
                                <th>action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in membre %}
                                <tr>
                                    <td>{{ entity.username }}</td>
                                    <td>{{ nb[entity.id] }}</td>
                                    <td>

                                        {% if nb[entity.id]>0 %}
                                        <a href="{{ path('project_game_hub_reclamation_show', { 'pseudo': entity.username }) }}">
                                            <i class="ti-eye"></i>
                                        </a>

                                        {% endif %}
                                            {% if entity.enabled %}
                                            <a href="{{ path('project_game_hub_ban', { 'id': entity.id }) }}">
                                                <button type="button" class="btn btn-wide btn-danger  btn-xs">
                                                    Ban
                                                </button>
                                            </a>
                                            {% else %}


                                                <a href="{{ path('project_game_hub_deban', { 'id': entity.id }) }}">
                                                    <button type="button" class="btn btn-wide btn-success  btn-xs">
                                                        DÃ©ban
                                                    </button>

                                                </a>
                                            {% endif %}

                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>



                    </div>
                </div>
            </div>

            <br>
            <div>
                <form method="post" action="{{ path('project_game_hub_recherche') }}">

                    <input name="recherche" type="number">
                    <input type="submit" class="btn btn-wide btn-primary   ">
                </form>
            </div>
        </div>

    </div>

    <!-- end: UI BOOTSTRAP MODALS -->


{% endblock %}
