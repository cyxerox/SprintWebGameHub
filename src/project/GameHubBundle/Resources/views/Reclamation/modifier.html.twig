{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrap-content container" id="container">
        <!-- start: DASHBOARD TITLE -->
        <section id="page-title">
            <div class="row">
                <div class="col-sm-7">
                    <h1 class="mainTitle">Liste des reclamtions</h1>
                </div>
                <ol class="breadcrumb">
                    <li>
                        <span>Reclamtions</span>
                    </li>
                    <li class="active">
                        <span>Liste des reclamtions</span>
                    </li>
                </ol>
            </div>
        </section>
        <!-- end: DASHBOARD TITLE -->
        <!-- start: UI BOOTSTRAP MODALS -->


        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h3 class="modal-title" id="myModalLabel">modification d'une nouvel
                reclamation :</h3>
        </div>
        <div class="modal-body">
            {{ form_start(formModif, {'method': 'post', 'action': path('project_game_hub_reclamation_modifier', { 'pseudo': entity.pseudo })}) }}

            <div class="form-group">
                <label for="inputEmail3"><h4 class="modal-title"
                                             id="myModalLabel">description
                        :</h4></label><br>
                {{ form_widget(formModif.description, { 'attr': {'class': 'form-control'} }) }} {{ form_errors(formModif.description) }}


            </div>
            <div class="form-group ">
                <label for="inputPassword3"><h4 class="modal-title"
                                                id="myModalLabel">pseudo :</h4>
                </label><br>
                <select id="pseudo" name="pseudo" class="form-control">
                    {% for m in membre %}
                        {% if m.roles[0]=="ROLE_USER" %}
                        <option {% if m.username == entity.pseudo %}selected{% endif %} value="{{ m.username }}">{{ m.username }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <div class="form-group   ">
                <label for="inputPassword3"><h4 class="modal-title"
                                                id="myModalLabel"> url :</h4>
                </label><br>
                {{ form_widget(formModif.url, { 'attr': {'class': 'form-control categorie'} }) }} {{ form_errors(formModif.url) }}

            </div>

        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-primary btn-o" value="Valider">

            {{ form_end(formModif) }}
        </div>

    </div>


{% endblock %}
